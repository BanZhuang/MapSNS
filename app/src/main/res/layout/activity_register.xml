<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_register_profile"
        android:clickable="true"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="28dp"
        android:src="@mipmap/icon_profile_dummy"
        android:layout_gravity="center_horizontal|top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/activity_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"/>

        <EditText
            android:id="@+id/activity_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"/>

        <EditText
            android:id="@+id/activity_register_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="나이"/>

    </LinearLayout>

    <Button
        android:id="@+id/activity_register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:background="#C4DAF0"
        android:layout_gravity="center_horizontal|bottom"/>

</FrameLayout>